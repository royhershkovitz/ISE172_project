        <Button Name="Back" Content="Back to main menu" FontSize="22" HorizontalAlignment="Left" Margin="100,550,0,0" VerticalAlignment="Top" Width="220" Height="35" Background="Bisque" AllowDrop="True" Click="Exit_Click"/>
        <Frame x:Name ="Main"/>
